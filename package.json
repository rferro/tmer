{
  "name": "tmer",
  "version": "1.1.0",
  "description": "Simple timer for Node.js and browser",
  "keywords": [
    "benchmark",
    "benchmarking",
    "hrtime",
    "profile",
    "time",
    "timeEnd",
    "timeStart",
    "timer"
  ],
  "bugs": {
    "url": "https://github.com/rferro/tmer/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rferro/tmer.git"
  },
  "license": "MIT",
  "author": "Ricardo Ferro <ricardo.ferro@gmail.com>",
  "unpkg": "dist/tmer.min.js",
  "main": "dist/tmer.node.js",
  "scripts": {
    "build": "npm run build:browser && npm run build:node",
    "build:browser": "parcel build --no-source-maps --global tmer -o dist/tmer.min.js src/tmer.js",
    "build:node": "parcel build --no-source-maps -o dist/tmer.node.js src/tmer.js",
    "deps-check": "npx npm-check --skip-unused --update",
    "lint": "standard | snazzy",
    "sort-package-json": "npx sort-package-json",
    "test": "jest -c jest/config.js",
    "test:watch": "npm test -- --verbose --watchAll",
    "prettier": "prettier-standard 'src/**/*.js'",
    "release": "standard-version"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.1.1",
    "@commitlint/config-conventional": "^7.1.1",
    "browser-process-hrtime": "^0.1.2",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "jest-extended": "^0.8.1",
    "normat": "^1.2.3",
    "parcel-bundler": "^1.9.7",
    "prettier-standard": "^8.0.1",
    "snazzy": "^8.0.0",
    "standard": "^11.0.1",
    "standard-version": "^4.4.0"
  },
  "engines": {
    "node": ">=8"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e $GIT_PARAMS"
    }
  },
  "standard": {
    "env": [
      "jest"
    ],
    "globals": [],
    "ignore": []
  },
  "publishConfig": {
    "access": "public"
  }
}
